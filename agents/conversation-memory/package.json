{
  "name": "@llm-memory-graph/conversation-memory-agent",
  "version": "1.0.0",
  "description": "Conversation Memory Agent - MEMORY WRITE agent for capturing multi-turn conversations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "gcloud functions deploy conversation-memory-agent --runtime nodejs20 --trigger-http --entry-point handler"
  },
  "keywords": [
